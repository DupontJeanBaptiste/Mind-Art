{% extends 'extentions/layouts/layout_users.html.twig' %}

{% block title %}Conseils{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('basket') }}
{% endblock %}

{% block body %}
    <h1>Mon Panier</h1>

              
   
<section class="h-100" style="background-color: #eee;">

    <div class="container h-100 py-5">
    
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">
       {% for basket in baskets %}
        <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-normal mb-0 text-black">Oeuvre en cours d'achat</h3>
        </div>

        <div class="card rounded-3 mb-4">
        <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img
                  src="{{basket.masterpiece.picture}}"
                  class="img-fluid rounded-3" alt="masterpiece">
              </div>
                   
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">{{basket.masterpiece.name}}</p>
                <p><span class="text-muted">Status: </span>{{basket.status}}</p>
                 <p><span class="text-muted">Vente acceptée ou refusée: </span>{{basket.validation}}</p>
              </div>
            
          
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">{{basket.masterpiece.price}}€</h5>
              </div>
            
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
              </div>
            </div>
          </div>
        </div>
 {% endfor %}

        <div class="card">
          <div class="card-body">
            <button type="button" class="btn btn-warning btn-block btn-lg">Confirmer le panier
            <a href="{{ path('app_buyer_order') }}"></a>
            </button>
          </div>
        </div>

     
<a href="{{ path('app_basket_new') }}">Create new</a>
 </div>
    </div>
  </div>
</section>
   
{% endblock %}

