<!DOCTYPE html>

<title>Masterpiece</title>

{% block body %}
    <h1>Masterpiece</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ masterpiece.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ masterpiece.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ masterpiece.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ masterpiece.description }}</td>
            </tr>
            <tr>
                <th>Display</th>
                <td>{{ masterpiece.display ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ masterpiece.status }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ masterpiece.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_masterpiece_index') }}">back to list</a>

    <a href="{{ path('app_masterpiece_edit', {'id': masterpiece.id}) }}">edit</a>

    {{ include('masterpiece/_delete_form.html.twig') }}
{% endblock %}
