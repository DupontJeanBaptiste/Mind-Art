<!DOCTYPE html>

<title>Event</title>
{% block stylesheets %}
    {{ encore_entry_link_tags('event') }}
{% endblock %}*

{% block body %}
    <h1>Evénement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ event.title}}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ event.beginAt ? event.beginAt|date('Y-m-d') : '' }}</td>
            </tr>
              <tr>
                <th>Fin</th>
                <td>{{ event.endAt ? event.endAt|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">retour à la liste</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">modifier</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
